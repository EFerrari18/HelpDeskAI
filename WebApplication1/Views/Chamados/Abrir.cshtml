@model HelpDeskAI.Models.Chamado

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Abrir Chamado - HelpDesk AI</title>

    <style>
        body {
            background: #f2f4fa;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* TOPBAR */
        .topbar {
            background: #0077ff;
            padding: 22px 0;
            text-align: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
        }

        /* LAYOUT */
        .wrapper {
            display: flex;
            height: calc(100vh - 80px);
        }

        /* SIDEBAR */
        .sidebar {
            width: 220px;
            background: white;
            padding: 25px;
            box-shadow: 3px 0px 10px rgba(0,0,0,0.15);
        }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 15px;
                text-decoration: none;
                background: #f6f7fb;
                border-radius: 10px;
                font-weight: bold;
                color: #333;
                transition: .2s;
            }

                .sidebar a:hover {
                    background: #0077ff;
                    color: white;
                }

        .logout {
            color: #d9534f !important;
        }

        /* CONTEÚDO */
        .content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
        }

        .card {
            background: white;
            padding: 25px;
            border-radius: 18px;
            box-shadow: 0px 6px 20px rgba(0,0,0,0.10);
            width: 650px;
            margin: auto;
        }

        h1 {
            color: #0077ff;
            text-align: center;
            font-size: 28px;
        }

        label {
            font-size: 15px;
            font-weight: 600;
        }

        .form-control, select, textarea {
            width: 100%;
            padding: 12px;
            border-radius: 12px;
            border: 1px solid #dcdcdc;
            background: #fafafa;
            margin-bottom: 18px;
            font-size: 16px;
        }

        .btn-primary {
            background: #0077ff;
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            border: none;
            color: white;
            font-size: 17px;
            font-weight: bold;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: #005fcc;
            }

        .btn-back {
            display: block;
            margin-top: 15px;
            text-align: center;
            background: #6c757d;
            padding: 12px;
            border-radius: 12px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

            .btn-back:hover {
                background: #545b62;
            }
    </style>
</head>

<body>

    <div class="topbar">HelpDesk AI</div>

    <div class="wrapper">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>
            <a href="/Chamados/Index">Meus Chamados</a>
            <a href="/Chamados/Abrir">Abrir Chamado</a>
            <a href="/Faq/Index">FAQ Inteligente</a>
            <a href="/Usuario/Perfil">Meu Perfil</a>
            <a href="/Usuario/Login" class="logout">Sair</a>
        </aside>

        <!-- CONTEÚDO -->
        <main class="content">

            <div class="card">
                <h1>Abrir Chamado</h1>

                <form method="post" asp-action="Abrir">

                    <label>Título</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ex.: Sistema travando ao abrir" required />

                    <label>Categoria</label>
                    <select asp-for="Categoria" class="form-control">
                        <option>Hardware</option>
                        <option>Software</option>
                        <option>Rede</option>
                        <option>Internet</option>
                        <option>Dúvidas Gerais</option>
                    </select>

                    <label>Status Inicial</label>
                    <input asp-for="Status" class="form-control" value="Aberto" readonly />

                    <label>Descrição</label>
                    <textarea asp-for="Descricao" rows="5" class="form-control"
                              placeholder="Descreva sua solicitação..."></textarea>

                    <button class="btn-primary">Enviar Chamado</button>

                </form>
            </div>

        </main>

    </div>

</body>
</html>
