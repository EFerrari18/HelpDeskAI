@model HelpDeskAI.Models.Chamado

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalhes do Chamado - HelpDesk AI</title>

    <style>
        body {
            background: #f2f4fa;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* TOPBAR */
        .topbar {
            background: #0077ff;
            padding: 22px 0;
            text-align: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
        }

        /* LAYOUT */
        .wrapper {
            display: flex;
            height: calc(100vh - 80px);
        }

        /* SIDEBAR */
        .sidebar {
            width: 220px;
            background: white;
            padding: 25px;
            box-shadow: 3px 0px 10px rgba(0,0,0,0.15);
        }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 15px;
                text-decoration: none;
                background: #f6f7fb;
                border-radius: 10px;
                font-weight: bold;
                color: #333;
                transition: .2s;
            }

                .sidebar a:hover {
                    background: #0077ff;
                    color: white;
                }

        .logout {
            color: #d9534f !important;
        }

        /* CONTEÚDO */
        .content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
        }

        .card {
            background: white;
            padding: 30px;
            border-radius: 18px;
            box-shadow: 0px 6px 20px rgba(0,0,0,0.10);
            width: 700px;
            margin: auto;
        }

        h1 {
            color: #0077ff;
            text-align: center;
            font-size: 28px;
            margin-bottom: 25px;
        }

        .info {
            font-size: 17px;
            margin-bottom: 15px;
        }

        .label {
            font-weight: bold;
            color: #0077ff;
        }

        /* STATUS COLORS */
        .status {
            padding: 8px 16px;
            border-radius: 12px;
            font-weight: bold;
            font-size: 15px;
            display: inline-block;
            margin-top: 5px;
        }

        .aberto {
            background: #ffe5e5;
            color: #ff3b3b;
        }

        .em-andamento {
            background: #fff3cd;
            color: #d39e00;
        }

        .finalizado {
            background: #d4edda;
            color: #28a745;
        }

        /* BOTÃO VOLTAR */
        .btn-back {
            display: block;
            margin-top: 25px;
            text-align: center;
            background: #6c757d;
            padding: 14px;
            border-radius: 12px;
            text-decoration: none;
            color: white;
            font-weight: bold;
            font-size: 16px;
        }

            .btn-back:hover {
                background: #545b62;
            }
    </style>
</head>

<body>

    <div class="topbar">HelpDesk AI</div>

    <div class="wrapper">

        <!-- MENU LATERAL -->
        <aside class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>
            <a href="/Chamados/Index">Meus Chamados</a>
            <a href="/Chamados/Abrir">Abrir Chamado</a>
            <a href="/Faq/Index">FAQ Inteligente</a>
            <a href="/Usuario/Perfil">Meu Perfil</a>
            <a href="/Usuario/Login" class="logout">Sair</a>
        </aside>

        <!-- CONTEÚDO PRINCIPAL -->
        <main class="content">

            <div class="card">

                <h1>Detalhes do Chamado</h1>

                <p class="info"><span class="label">ID:</span> @Model.Id</p>
                <p class="info"><span class="label">Título:</span> @Model.Titulo</p>
                <p class="info"><span class="label">Categoria:</span> @Model.Categoria</p>

                <p class="info">
                    <span class="label">Status:</span><br />
                    <span class="status
                        @(
                                                      Model.Status == "Aberto" ? "aberto" :
                                                      Model.Status == "Em andamento" ? "em-andamento" :
                                                      "finalizado"
                                                )">
                        @Model.Status
                    </span>
                </p>

                <p class="info"><span class="label">Data de Abertura:</span> @Model.DataAbertura</p>

                <p class="info">
                    <span class="label">Descrição:</span><br />
                    @Model.Descricao
                </p>


            </div>

        </main>

    </div>

</body>
</html>
