@model IEnumerable<HelpDeskAI.Models.Chamado>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meus Chamados - HelpDesk AI</title>

    <style>

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f5f8ff;
        }

        /* ===== TOPBAR ===== */
        .topbar {
            background: #0077ff;
            padding: 22px 0;
            text-align: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

        /* ===== WRAPPER ===== */
        .wrapper {
            display: flex;
            height: calc(100vh - 80px);
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 220px; /* AQUI está maior */
            background: white;
            padding: 25px;
            box-shadow: 3px 0 10px rgba(0,0,0,0.15);
        }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 15px;
                background: #f6f7fb;
                border-radius: 10px;
                text-decoration: none;
                font-weight: bold;
                color: #333;
                transition: .2s;
            }

                .sidebar a:hover {
                    background: #0077ff;
                    color: white;
                }

        .logout {
            color: #d9534f !important;
        }

        /* ===== CONTENT ===== */
        .content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
        }

        h1 {
            color: #0077ff;
            font-size: 28px;
            text-align: center;
            margin-bottom: 25px;
        }

        /* ===== CARD DA TABELA ===== */
        .table-box {
            background: white;
            padding: 25px;
            border-radius: 18px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            width: 90%;
            margin: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th {
                background: #0077ff;
                color: white;
                padding: 10px;
                font-size: 15px;
            }

            table td {
                padding: 10px;
                text-align: center;
                border-bottom: 1px solid #eee;
            }

        .btn {
            background: #0077ff;
            padding: 7px 14px;
            border-radius: 10px;
            color: white;
            font-size: 14px;
            text-decoration: none;
            transition: .2s;
        }

            .btn:hover {
                background: #005fcc;
            }

        /* STATUS */
        .status {
            padding: 6px 12px;
            border-radius: 12px;
            font-weight: bold;
            color: white;
            font-size: 12px;
        }

        .pendente {
            background: #ff5c5c;
        }

        .andamento {
            background: #ffc107;
            color: black;
        }

        .finalizado {
            background: #28a745;
        }
    </style>

</head>

<body>

    <div class="topbar">HelpDesk AI</div>

    <div class="wrapper">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>
            <a href="/Chamados/MeusChamados">Meus Chamados</a>
            <a href="/Chamados/Abrir">Abrir Chamado</a>
            <a href="/Faq/Index">FAQ</a>
            <a href="/Usuario/Perfil">Meu Perfil</a>
            <a href="/Usuario/Login" class="logout">Sair</a>
        </aside>

        <!-- CONTENT -->
        <main class="content">

            <h1>Meus Chamados</h1>

            <div class="table-box">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Categoria</th>
                            <th>Status</th>
                            <th>Ação</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.Titulo</td>
                                <td>@c.Categoria</td>

                                <td>
                                    <span class="status @(c.Status == "Pendente" ? "pendente" :
                                                                                                    c.Status == "Em andamento" ? "andamento" :
                                                                                                    "finalizado")">
                                    @c.Status
                                </span>
                            </td>

                                <td>
                                    <a href="/Chamados/Detalhes/@c.Id" class="btn">Ver</a>
                                </td>
                            </tr>
                                                }
                    </tbody>

                </table>
            </div>

        </main>

    </div>

</body>
</html>
