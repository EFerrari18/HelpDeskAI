@{
    ViewData["Title"] = "FAQ Inteligente";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>FAQ - HelpDesk AI</title>

    <style>
        body {
            background: #f2f4fa;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* TOPBAR */
        .topbar {
            background: #0077ff;
            padding: 22px 0;
            text-align: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
        }

        /* LAYOUT */
        .wrapper {
            display: flex;
            height: calc(100vh - 80px);
        }

        /* SIDEBAR */
        .sidebar {
            width: 220px;
            background: white;
            padding: 25px;
            box-shadow: 3px 0px 10px rgba(0,0,0,0.15);
        }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 15px;
                text-decoration: none;
                background: #f6f7fb;
                border-radius: 10px;
                font-weight: bold;
                color: #333;
                transition: .2s;
            }

                .sidebar a:hover {
                    background: #0077ff;
                    color: white;
                }

        .logout {
            color: #d9534f !important;
        }

        /* CONTEÚDO */
        .content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
        }

        .card {
            background: white;
            padding: 25px;
            border-radius: 18px;
            box-shadow: 0px 6px 20px rgba(0,0,0,0.10);
            width: 700px;
            margin: auto;
        }

        h1 {
            color: #0077ff;
            margin-top: 0;
            text-align: center;
            font-size: 28px;
            margin-bottom: 20px;
        }

        /* INPUT */
        .search-box {
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            border: 1px solid #dcdcdc;
            background: #fafafa;
            font-size: 16px;
            margin-bottom: 20px;
        }

            .search-box:focus {
                outline: none;
                border-color: #0077ff;
                box-shadow: 0 0 5px rgba(0,119,255,0.30);
            }

        /* RESULTADO */
        .faq-answer {
            background: #eef4ff;
            border-left: 6px solid #0077ff;
            padding: 15px;
            border-radius: 10px;
            margin-top: 15px;
            font-size: 17px;
        }

        .faq-empty {
            text-align: center;
            font-size: 18px;
            color: #777;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="topbar">HelpDesk AI</div>

    <div class="wrapper">

        <!-- MENU LATERAL -->
        <aside class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>
            <a href="/Chamados/Index">Meus Chamados</a>
            <a href="/Chamados/Abrir">Abrir Chamado</a>
            <a href="/Faq/Index">FAQ Inteligente</a>
            <a href="/Usuario/Perfil">Meu Perfil</a>
            <a href="/Usuario/Login" class="logout">Sair</a>
        </aside>

        <!-- CONTEÚDO PRINCIPAL -->
        <main class="content">

            <div class="card">

                <h1>FAQ Inteligente</h1>

                <!-- CAIXA DE PERGUNTA -->
                <input type="text" id="txtPergunta" class="search-box" placeholder="Digite sua dúvida... (Ex: erro ao logar, chamado atrasado, senha, etc.)" oninput="buscarResposta()" />

                <!-- RESPOSTAS -->
                <div id="resultado"></div>

            </div>

        </main>

    </div>

    <!-- SCRIPT -->
    <script>

        const respostas = [
            {
                palavras: ["login", "senha", "entrar"],
                resposta: "Se você não consegue fazer login, verifique se o e-mail e senha estão corretos. Caso tenha esquecido, solicite uma redefinição na tela de login."
            },
            {
                palavras: ["chamado", "abrir", "novo"],
                resposta: "Para abrir um novo chamado, acesse o menu lateral e clique em 'Abrir Chamado'. Preencha os dados e envie."
            },
            {
                palavras: ["status", "andamento", "acompanhar"],
                resposta: "Você pode acompanhar o status dos seus chamados no menu 'Meus Chamados'."
            },
            {
                palavras: ["categoria", "erro", "tipo"],
                resposta: "Selecione a categoria que melhor representa o problema. Caso não saiba, escolha 'Outros'."
            },
            {
                palavras: ["prioridade", "urgente", "alta"],
                resposta: "Chamados urgentes devem ser marcados como 'Alta Prioridade'. O suporte será notificado imediatamente."
            },
            {
                palavras: ["sair", "logout"],
                resposta: "Para sair do sistema, clique em 'Sair' no menu lateral."
            }
        ];

        function buscarResposta() {
            let pergunta = document.getElementById("txtPergunta").value.toLowerCase();
            let div = document.getElementById("resultado");

            if (pergunta.trim() === "") {
                div.innerHTML = "";
                return;
            }

            let match = respostas.find(r =>
                r.palavras.some(p => pergunta.includes(p))
            );

            if (match) {
                div.innerHTML = `<div class='faq-answer'>${match.resposta}</div>`;
            } else {
                div.innerHTML = "<p class='faq-empty'>Nenhuma resposta encontrada...</p>";
            }
        }

    </script>

</body>
</html>
