@model HelpDeskAI.Models.Usuario
@{
    ViewData["Title"] = "Excluir Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h2>Excluir Usuário</h2>

    <p>Tem certeza?</p>

    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Perfil:</strong> @Model.Perfil</p>

    <form asp-action="ExcluirConfirmado">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-danger mt-3">Excluir</button>
        <a href="/Usuario/Index" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>
