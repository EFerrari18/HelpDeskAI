@model IEnumerable<HelpDeskAI.Models.Usuario>
@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h2>Usuários</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>@u.Perfil</td>
                    <td>
                        <a href="/Usuario/Editar/@u.Id" class="btn btn-warning">Editar</a>
                        <a href="/Usuario/Excluir/@u.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Usuario/Cadastrar" class="btn btn-primary mt-3">Novo Usuário</a>
</div>
