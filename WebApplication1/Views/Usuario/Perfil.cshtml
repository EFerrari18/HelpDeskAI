@model HelpDeskAI.Models.Usuario

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meu Perfil - HelpDesk AI</title>

    <style>
        body {
            background: #f2f4fa;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* TOPBAR */
        .topbar {
            background: #0077ff;
            padding: 22px 0;
            text-align: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
        }

        /* LAYOUT */
        .wrapper {
            display: flex;
            height: calc(100vh - 80px);
        }

        /* SIDEBAR */
        .sidebar {
            width: 220px;
            background: white;
            padding: 25px;
            box-shadow: 3px 0px 10px rgba(0,0,0,0.15);
        }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 15px;
                background: #f6f7fb;
                text-decoration: none;
                border-radius: 10px;
                font-weight: bold;
                color: #333;
                transition: .2s;
            }

                .sidebar a:hover {
                    background: #0077ff;
                    color: white;
                }

        .logout {
            color: #d9534f !important;
        }

        /* CONTENT */
        .content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
        }

        .card {
            background: white;
            padding: 30px;
            border-radius: 18px;
            width: 600px;
            margin: auto;
            box-shadow: 0px 6px 20px rgba(0,0,0,0.10);
        }

        h1 {
            color: #0077ff;
            font-size: 28px;
            text-align: center;
            margin-top: 0;
        }

        label {
            font-weight: bold;
            color: #505050;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border-radius: 12px;
            border: 1px solid #dcdcdc;
            background: #fafafa;
            margin-bottom: 18px;
            font-size: 15px;
        }

        .btn-primary {
            background: #0077ff;
            padding: 12px;
            border-radius: 12px;
            color: white;
            border: none;
            width: 100%;
            font-size: 17px;
            font-weight: bold;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: #005fcc;
            }

        .btn-back {
            display: block;
            margin-top: 15px;
            text-align: center;
            background: #6c757d;
            padding: 12px;
            border-radius: 12px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

            .btn-back:hover {
                background: #545b62;
            }

        .msg-sucesso {
            background: #d4edda;
            border-left: 6px solid #28a745;
            color: #1e7e34;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 15px;
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="topbar">HelpDesk AI</div>

    <div class="wrapper">

        <!-- MENU LATERAL -->
        <aside class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>
            <a href="/Chamados/Index">Meus Chamados</a>
            <a href="/Chamados/Abrir">Abrir Chamado</a>
            <a href="/Faq/Index">FAQ Inteligente</a>
            <a href="/Usuario/Perfil">Meu Perfil</a>
            <a href="/Usuario/Login" class="logout">Sair</a>
        </aside>

        <!-- CONTEÚDO PRINCIPAL -->
        <main class="content">

            <div class="card">

                <h1>Meu Perfil</h1>

                @if (TempData["Sucesso"] != null)
                {
                    <div class="msg-sucesso">@TempData["Sucesso"]</div>
                }

                <form asp-action="AtualizarPerfil" method="post">

                    <label>Nome</label>
                    <input class="form-control" asp-for="Nome" />

                    <label>Email</label>
                    <input class="form-control" asp-for="Email" />

                    <label>Telefone</label>
                    <input class="form-control" asp-for="Telefone" placeholder="Opcional" />

                    <label>Nova Senha (opcional)</label>
                    <input type="password" name="NovaSenha" class="form-control" placeholder="Digite para alterar" />

                    <button class="btn-primary">Atualizar Perfil</button>


                </form>

            </div>

        </main>

    </div>

</body>
</html>
